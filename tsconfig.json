{
  "compilerOptions": {
    "target": "es6",                                  
    "module": "esnext",                                
    "esModuleInterop": true,                                   
    "lib": [
      "dom",
      "DOM.Iterable",
      "esnext"
    ],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react",
    "allowJs": true,
    "rootDir": "src",
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": [
    "src"
  ]
}